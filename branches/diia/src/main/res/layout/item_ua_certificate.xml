<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uaCertificate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/white">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/docTypeTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/document_type" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/docTypeValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Паспорт громадянина України" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/genderTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/gender" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/genderValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="M" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/docNumberTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/document_number" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/docNumberValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="1234" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/middleNameTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/middle_name_ua" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/middleNameValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Володимирівна" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/registrationTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/registration" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/registrationValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="м. Київ" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nationalityTitle"
        style="@style/TextAppearance.Dgca.CertificateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/nationality" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nationalityValue"
        style="@style/TextAppearance.Dgca.CertificateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="UA" />
</LinearLayout>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.app.vc">

    <application>
        <activity
            android:name="dgca.verifier.app.android.vc.ui.VcActivity"
            android:exported="false"
            android:label="VcActivity"
            android:launchMode="singleInstance">

            <intent-filter>
                <action android:name="com.android.app.vc.View" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="vc"
                    android:scheme="verifier" />
            </intent-filter>
        </activity>
        <activity
            android:name="dgca.verifier.app.android.vc.ui.VcSettingsActivity"
            android:exported="false"
            android:label="VcSettingsActivity">
            <intent-filter>
                <action android:name="com.android.app.vc.View" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="vc"
                    android:scheme="settings" />
            </intent-filter>
        </activity>
    </application>
</manifest>
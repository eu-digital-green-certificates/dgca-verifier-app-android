<resources>

    <style name="TextAppearance.Dgca.CertificateTitle" parent="">
        <item name="android:textColor">@color/grey_100</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontFamily">sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Dgca.CertificateValue" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="fontFamily">sans</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Dgca.RuleTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Dgca.DetailedVerificationResultBannerTitle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TextAppearance.Dgca.DetailedCertificateHeader" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dgca.DetailedCertificateName" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Dgca.SettingsButtonHeader" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_arrow_forward_24</item>
        <item name="android:gravity">start|center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingHorizontal">@dimen/default_padding</item>
    </style>

    <style name="TextAppearance.Dgca.SettingsButtonSubHeader" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Dgca.DebugModeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:paddingHorizontal">@dimen/default_margin</item>
        <item name="android:textColor">@color/debug_mode_radio_button_text_color</item>
    </style>

    <style name="TextAppearance.Dgca.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="TextAppearance.Dgca.ActionButton" parent="">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>
</resources>
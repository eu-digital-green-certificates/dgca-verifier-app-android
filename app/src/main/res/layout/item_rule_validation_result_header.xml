<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/top_vertical"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottom_vertical"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/identifier"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="@string/rule_identifier"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottom_vertical"
        app:layout_constraintEnd_toStartOf="@id/identifier_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_vertical" />

    <View
        android:id="@+id/identifier_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/description"
        app:layout_constraintStart_toEndOf="@id/identifier"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="@string/rule_description"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottom_vertical"
        app:layout_constraintEnd_toStartOf="@id/description_divider"
        app:layout_constraintStart_toEndOf="@id/identifier_divider"
        app:layout_constraintTop_toBottomOf="@id/top_vertical" />

    <View
        android:id="@+id/description_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/result"
        app:layout_constraintStart_toEndOf="@id/description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="@string/result"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottom_vertical"
        app:layout_constraintEnd_toStartOf="@id/result_divider"
        app:layout_constraintStart_toEndOf="@id/description_divider"
        app:layout_constraintTop_toBottomOf="@id/top_vertical" />

    <View
        android:id="@+id/result_divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/current"
        app:layout_constraintStart_toEndOf="@id/result"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="@string/current"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/bottom_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/result_divider"
        app:layout_constraintTop_toBottomOf="@id/top_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>